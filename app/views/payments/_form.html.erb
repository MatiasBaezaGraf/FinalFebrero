<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :cabin_id %>
    <%= form.collection_select(:cabin_id, Cabin.all, :id, :number) %>
  </div>

  <div class="field">
    <%= form.label :roll_id %>
    <%= form.collection_select(:roll_id, Roll.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :real_ammount %>
    <%= form.number_field :real_ammount %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

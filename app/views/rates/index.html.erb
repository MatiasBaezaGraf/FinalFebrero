<p id="notice"><%= notice %></p>

<h1>Rates</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle type</th>
      <th>Price</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rates.each do |rate| %>
      <tr>
        <td><%= rate.vehicle.patent %></td>
        <td><%= rate.price %></td>
        <td><%= rate.from %></td>
        <td><%= rate.to %></td>
        <% if current_user.role == "administrador" %>
          <td><%= link_to 'Show', rate %></td>
          <td><%= link_to 'Edit', edit_rate_path(rate) %></td>
          <td><%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

